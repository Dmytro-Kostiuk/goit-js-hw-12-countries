{{#each this}}
<div>
    <h2 class="header">{{name}}</h2>
</div>
<div class="container">


    <div class="image-div">
        <img src="{{flag}}" alt="{{name}} " width="270" height="auto">
    </div>
    <div class="content">


        <p><b>Population:</b> {{population}}</p>
        <p><b>Capital: </b>{{capital}}</p>
        <p><b>Languages:</p></b>
        <ul>
            {{#each languages}}
            <li>{{name}}</li>
            {{/each}}
        </ul>
    </div>
</div>
{{/each}}